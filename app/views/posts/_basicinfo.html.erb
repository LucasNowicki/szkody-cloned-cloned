<%= form_for @post, html: { multipart: true, class: 'form-inline' } do |f| %>

<div class="formularz">
  
  <div class="span7 text-center">
    <div class="col-sm-2 input-group">
      <label for="rg-from">Marka Pojazdu</label>
      <%= f.text_field :mark, placeholder: 'Marka pojazdu', class: 'form-control' %>
    </div>    
    
    <div class="col-sm-2 input-group">
      <label for="rg-from">Model Pojazdu</label>
      <%= f.text_field :model, placeholder: 'Model pojazdu', class: 'form-control' %>
    </div>        
    
    <div class="col-sm-1 input-group">
      <label for="rg-from">Rok Produkcji</label>
      <%= f.text_field :year, placeholder: 'Rok produkcji', class: 'form-control' %>
    </div>        

    <div class="col-sm-1 input-group">
      <label for="rg-from">Tablice</label>
      <%= f.text_field :registration, placeholder: 'Numer rejestracyjny', class: 'form-control' %>
    </div>  
    
    <div class="col-sm-2 input-group">
      <label for="rg-from">Kosztorys</label>
    <%= f.file_field :document,  id: 'file_field'%>
    </div>
    
    <div>
      <br>
    </div>
    
    <div class="col-sm-2 input-group">
      <label for="rg-from">Właściciel</label>
      <%= f.text_field :owner, placeholder: 'Właściciel', class: 'form-control' %>
    </div> 
    
    <div class="col-sm-2 input-group">
      <label for="rg-from">Numer klienta</label>
      <%= f.text_field :phone, placeholder: 'Numer Telefonu', class: 'form-control' %>
    </div>
    
    <div class="col-sm-2 input-group">
      <label for="rg-from">Adres e-mail</label>
      <%= f.text_field :email, placeholder: 'Adres e-mail', class: 'form-control' %>
    </div>
    
    <div class="col-sm-2 input-group">
      <label for="rg-from">Z polecenia</label>
      <%= f.text_field :recommendation, placeholder: 'Osoba polecająca', class: 'form-control' %>
    </div>
    
     <hr class="divider">
     
     <div class="col-sm-2 input-group">
      <label for="rg-from">Majchrzak</label>
      <%= f.text_field :majchrzak, placeholder: 'Kwota od Majchrzaka', class: 'form-control' %>
    </div> 
    
    <div class="col-sm-2 input-group">
      <label for="rg-from">PCWO</label>
      <%= f.text_field :pcwo, placeholder: 'Kwota od PCWO', class: 'form-control' %>
    </div> 
    
    <div class="col-sm-2 input-group">
      <label for="rg-from">Solace</label>
      <%= f.text_field :solace, placeholder: 'Kwota od Solace', class: 'form-control' %>
    </div>  
    
    <div class="col-sm-2 input-group">
      <label for="rg-from">Moja Oferta</label>
      <%= f.text_field :offer, placeholder: 'Oferowana kwota', class: 'form-control' %>
    </div>  
    
    <div class="col-sm-8 input-group">
      <label for="rg-from">Komentarz</label>
      <%= f.text_area :comment, class: 'form-control' %>
    </div>  
    
    </div>
    
    
    <div>
        <br>
    </div>
    
    <hr class="divider">
    
    
    
</div>
    
<% end %>