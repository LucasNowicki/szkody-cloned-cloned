<%= form_for @post, html: { multipart: true, class: 'form-inline' } do |f| %>

<div class="panel panel-default">
    <div class="panel-heading"><h2>Edytuj szkodę | Przygotuj umowę</h2></div>
      <div class="panel-body">
        
      <div class="span7 text-center">
        <div class="input-group">
          <label for="rg-from">Numer Cesji</label>
          <%= f.text_field :contract, placeholder: 'Wpisz numer cesji', class: 'form-control' %>
      </div>
      <div>
          <hr class="divider">
      </div>
  </div>

<%= render 'basicinfo' %>

<div class="span7 text-center">
        <div class="input-group">
          <%= f.submit "Zapisz zmiany", class: 'btn btn-primary btn-lg' %>
        </div>
        <div>
          <hr class="divider">
        </div>
  </div>
  
  
<%= render 'questionnaire' %>
</div>

<% end %>
