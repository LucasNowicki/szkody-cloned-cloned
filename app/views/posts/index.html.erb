<h1> Zestawienie szkód</h1>
<table class="table table-hover">
    <thead>
        <tr>
            <th>Marka</th>
            <th>Model</th>
            <th>Produkcja</th>
            <th>Tablice</th>
            <th>Właściciel</th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    
    
    <tbody>
        <% @posts.each do |post| %>
        <tr>
            <td><%= post.mark %></td>
            <td><%= post.model %></td>
            <td><%= post.year %></td>
            <td><%= post.registration %></td>
            <td><%= post.owner %></td>
            <td><%= link_to "Pobierz", post.document.url %></td>
            <%#<td><%= link_to 'Pobierz async', { :controller => 'posts', :action => 'send_email', :id => post.id }, :method => :get, :remote => true %></td>
            
            <td><%= link_to "Szczegóły", post %></td>
        </tr>
        <% end %>
    </tbody>
</table>

