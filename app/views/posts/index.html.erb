<div style="color: red; margin-left: 10px; margin-bottom: 5px; size: 12px;" id="tujakcossierozkurwi"></div>
<div style="color: blue; margin-left: 20px; size: 8px;" id="tujakcossierozkurwi2"></div>

<h1> Zestawienie szkód</h1>
<table class="table table-hover">
    <thead>
        <tr>
            <th>Marka</th>
            <th>Model</th>
            <th>Produkcja</th>
            <th>Tablice</th>
            <th>Właściciel</th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>

    <h5>
        <%= @gowno %>
    </h5>
    
    <tbody>
        <% @posts.each do |post| %>
        <tr>
            <td><%= post.mark %></td>
            <td><%= post.model %></td>
            <td><%= post.year %></td>
            <td><%= post.registration %></td>
            <td><%= post.owner %></td>
            <td><%= link_to "Pobierz", post.document.url %></td>
            <td><%= link_to 'Wyślij szkodę do liczenia', { :controller => 'posts', :action => 'send_email', :id => post.id }, :method => :get, :remote => true %></td>
            
            <td><%= link_to "Szczegóły", post %></td>
        </tr>
        <% end %>
    </tbody>
</table>

