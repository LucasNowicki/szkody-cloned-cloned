        </tr>
    </thead>
    
    
    <tbody>
        <% @posts.each do |post| %>
        <tr>
            <td><%= post.mark %></td>
            <td><%= post.model %></td>
            <td><%= post.year %></td>
            <td><%= post.registration %></td>
            <td><%= post.owner %></td>
            <td><%= link_to "Pobierz", post.document.url %></td>
            <td><%= link_to 'Pobierz async', { :controller => 'posts', :action => 'send_email', :id => post.id }, :method => :get, :remote => true %></td>
            
            <td><%= link_to "Szczegóły", post %></td>
        </tr>
        <% end %>
